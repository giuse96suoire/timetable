<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutAnimation="@anim/animation_scale_from_center_controller"
    android:orientation="vertical">

    <ScrollView
        android:background="@drawable/dialog_backgroud_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dialog_padding"
            android:weightSum="1">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/global_margin"
                android:layout_marginTop="@dimen/global_margin"
                android:text="Thông tin"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dialog_title_text_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/global_margin"
                android:text="Chạm vào mục tương ứng để chỉnh sửa"
                android:textColor="@color/colorTextNegativeButton"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_subject_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_element_dialog"
                android:drawablePadding="@dimen/padding_drawable_of_text_view"
                android:drawableStart="@drawable/ic_subject_dark_24dp"
                android:gravity="center_vertical"
                android:hint="Môn học"
                android:padding="@dimen/text_view_padding"
                android:textSize="@dimen/dialog_main_text_size"/>

            <TextView
                android:id="@+id/tv_subject_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_element_dialog"
                android:drawablePadding="@dimen/padding_drawable_of_text_view"
                android:drawableStart="@drawable/ic_access_time_black_24dp"
                android:gravity="center_vertical"
                android:hint="Thời gian bắt đầu"
                android:padding="@dimen/text_view_padding"
                android:textSize="@dimen/dialog_main_text_size"/>

            <TextView
                android:id="@+id/tv_subject_end_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_element_dialog"
                android:drawablePadding="@dimen/padding_drawable_of_text_view"
                android:drawableStart="@drawable/ic_access_time_black_24dp"
                android:gravity="center_vertical"
                android:hint="Thời gian kết thúc"
                android:padding="@dimen/text_view_padding"
                android:textSize="@dimen/dialog_main_text_size"/>

            <EditText
                android:id="@+id/et_subject_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_element_dialog"
                android:background="#ffffff"
                android:drawablePadding="@dimen/padding_drawable_of_text_view"
                android:drawableStart="@drawable/ic_calendar_dark_24dp"
                android:gravity="center_vertical"
                android:hint="Nhắc nhở"
                android:padding="@dimen/text_view_padding"
                android:textSize="@dimen/dialog_main_text_size"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:weightSum="2">

                <Button
                    android:id="@+id/btn_dismiss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/btn_finish"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="Thoát"
                    android:textColor="@color/negative_text_color_selector"/>

                <Button
                    android:id="@+id/btn_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/global_margin"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="Lưu"
                    android:textColor="@color/positive_text_color_selector"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
